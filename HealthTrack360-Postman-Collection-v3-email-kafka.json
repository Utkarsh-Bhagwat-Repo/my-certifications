  "info": {
    "_postman_id": "b72c3d16-cb67-416e-a7dc-4e96c7d1c7ba",
    "name": "HealthTrack360 Backend v3 (Email & Kafka Enabled)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for HealthTrack360 backend v7:\n- JWT login + refresh\n- Patient registration (triggers email via Kafka)\n- Admin doctor management (triggers email via Kafka)\n- Appointments, patient requests, medical records, file upload"
  },
  "item": [
    {
      "name": "AuthController (/api/auth)",
      "item": [
        {
          "name": "Login - Get Access & Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            },
            "description": "Login with an existing user (e.g. ADMIN). Response contains accessToken and refreshToken.",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"Admin@123\"\n}"
            },
            "auth": {
              "type": "noauth"
            }
          }
        },
        {
          "name": "Refresh - Generate New Tokens",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/refresh",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "auth",
                "refresh"
              ]
            },
            "description": "Exchange a valid refresh token for a new access token and refresh token.",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refreshToken}}\"\n}"
            },
            "auth": {
              "type": "noauth"
            }
          }
        }
      ]
    },
